<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#fefefe"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="340dp"
        android:layout_height="220dp"
        android:layout_gravity="center"
        card_view:cardCornerRadius="5dp">


        <RelativeLayout
            android:id="@+id/print"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="10dp">


            <TextView
                android:id="@+id/name"
                android:layout_width="109dp"
                android:layout_height="31dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="3dp"
                android:background="#fefefe"
                android:gravity="center"
                android:maxLines="3"
                android:padding="8dp"
                android:text="name"
                android:textColor="#222" />


            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/name"
                android:background="#fefefe"
                android:maxLines="3"
                android:padding="8dp"
                android:text="ID"
                android:textColor="#222"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="42dp"
                android:layout_toEndOf="@+id/id"
                android:background="#fefefe"
                android:maxLines="3"
                android:padding="8dp"
                android:text="Date"
                android:textColor="#222"
                android:textSize="12dp" />

            <View
                android:layout_width="320dp"
                android:layout_height="0.5dp"
                android:layout_below="@+id/id"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/name"
                android:layout_alignParentStart="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="65dp"
                android:background="#fefefe"
                android:maxLines="3"
                android:padding="8dp"
                android:text="Status -- "
                android:textColor="#222"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/received"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/status"
                android:layout_alignParentStart="true"
                android:layout_marginStart="36dp"
                android:layout_marginTop="18dp"
                android:background="#fefefe"
                android:maxLines="3"
                android:padding="8dp"
                android:text="Reference No --"
                android:textColor="#222"
                android:textSize="10dp" />


            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="180dp"
                android:layout_marginTop="73dp"
                android:layout_toEndOf="@+id/status"
                android:background="#fefefe"
                android:maxLines="3"
                android:padding="8dp"
                android:text="Amount"
                android:textColor="#222"
                android:textSize="10dp" />


            <TextView
                android:id="@+id/open_close"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_below="@+id/id"
                android:layout_alignTop="@+id/status"
                android:layout_marginStart="39dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/status"
                android:text="Status condition" />

            <TextView
                android:id="@+id/ref"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_below="@+id/open_close"
                android:layout_marginStart="28dp"
                android:layout_marginTop="19dp"
                android:layout_toEndOf="@+id/received"
                android:text="reference no" />

            <TextView
                android:id="@+id/amount1"
                android:layout_width="76dp"
                android:layout_height="27dp"
                android:layout_below="@+id/amount"
                android:layout_marginStart="134dp"
                android:layout_marginTop="9dp"
                android:layout_toEndOf="@+id/received"
                android:gravity="center"
                android:text="Amount" />

            <Button
                android:id="@+id/button"
                android:layout_width="320dp"
                android:layout_height="38dp"
                android:layout_alignTop="@+id/id"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="161dp"
                android:background="#fef"
                android:text="Deposit/ Withdraw"
                android:textSize="10dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>
