<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"

    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#F2E394"
        card_view:cardCornerRadius="10dp">
  <android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


      <TextView
          android:id="@+id/date"
          android:layout_width="wrap_content"
          android:layout_height="50dp"
          android:layout_marginStart="28dp"
          android:layout_marginTop="28dp"
          android:hint="Date"
          android:textColor="@color/black"
          card_view:layout_constraintStart_toStartOf="parent"
          card_view:layout_constraintTop_toTopOf="parent" />

      <TextView
          android:id="@+id/name"
          android:layout_width="wrap_content"
          android:layout_height="50dp"
          android:layout_marginStart="36dp"
          android:layout_marginTop="28dp"
          android:hint="Name"
          android:textColor="@color/black"
          card_view:layout_constraintStart_toEndOf="@+id/date"
          card_view:layout_constraintTop_toTopOf="parent" />


      <TextView
          android:id="@+id/purpose"
          android:layout_width="wrap_content"
          android:layout_height="50dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="8dp"
          android:hint="Purpose"
          android:textColor="@color/black"
          card_view:layout_constraintStart_toStartOf="parent"
          card_view:layout_constraintTop_toBottomOf="@+id/date" />


      <TextView
          android:id="@+id/amount"
          android:layout_width="147dp"
          android:layout_height="48dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="28dp"
          android:hint="Amount"
          android:textColor="@color/black"
          card_view:layout_constraintStart_toEndOf="@+id/name"
          card_view:layout_constraintTop_toTopOf="parent" />

      <TextView
          android:id="@+id/ptype"
          android:layout_width="wrap_content"
          android:layout_height="50dp"
          android:layout_marginStart="28dp"
          android:layout_marginTop="8dp"
          android:hint="Payment Type"
          android:textColor="@color/black"
          card_view:layout_constraintStart_toEndOf="@+id/purpose"
          card_view:layout_constraintTop_toBottomOf="@+id/name" />

      <TextView
          android:id="@+id/etype"
          android:layout_width="117dp"
          android:layout_height="50dp"
          android:layout_marginStart="12dp"
          android:layout_marginTop="8dp"
          android:hint="Account Type"
          android:textColor="@color/black"
          card_view:layout_constraintStart_toEndOf="@+id/ptype"
          card_view:layout_constraintTop_toBottomOf="@+id/amount" />

      <Button
          android:id="@+id/delete"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="8dp"
          android:layout_marginTop="8dp"
          android:layout_marginEnd="8dp"
          android:text="Delete"
          card_view:layout_constraintEnd_toEndOf="parent"
          card_view:layout_constraintStart_toStartOf="parent"
          card_view:layout_constraintTop_toBottomOf="@+id/ptype" />

  </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
